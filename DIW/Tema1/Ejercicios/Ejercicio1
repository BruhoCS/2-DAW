            <option value="Windows">Windows</option>
            <option value="Debian">Debian</option>
            <option value="Ubuntu">Ubuntu</option>
          </select><br><br>
           <!--Option disbaled-->
        <label>Ejemplo option disbaled : </label>
        <select id="cars">
            <option value="Linux">Linux</option>
            <option value="Windows" disabled>Windows</option>
            <option value="Debian">Debian</option>
            <option value="Ubuntu">Ubuntu</option>
          </select><br><br>
            <!--Option selected-->
        <label>Ejemplo option selected : </label>
        <select id="cars">
            <option value="Linux">Linux</option>
            <option value="Windows">Windows</option>
            <option value="Debian">Debian</option>
            <option value="Ubuntu" selected>Ubuntu</option>
          </select><br><br>
